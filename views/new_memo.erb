<html>
  <head>
    <meta charset=utf-8>
    <title>メモ</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header class="header">
      <h1 class="header__title">メモアプリ</h1>
    </header>
    <div data-alert class="flash_alert-box_radius">
      <%= @message if @message %>
    </div>
    <div class="form_memo">
      <form action="new_memo" method="post" class="form">
        <input type="text" name="title" class="form-item_titlearea">
        <textarea type="text" name="text" class="form-item_textarea"><%= @text if @text %></textarea>
        <input type="submit" value="保存" class="is-submit">
      </form>
    </div>
  </body>
</html>